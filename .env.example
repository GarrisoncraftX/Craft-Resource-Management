# JWT Secret
JWT_SECRET=your-jwt-secret-here

# Frontend URL
FRONTEND_URL=http://localhost

# Backend URLs
PYTHON_BACKEND_URL=http://python-backend:5000
NODE_BACKEND_URL=http://nodejs-backend:3000
JAVA_BACKEND_URL=http://java-backend:5002
APIGATEWAY_SERVICE_URL=http://api-gateway:5003
PYTHON_SERVICE_URL=http://python-backend:5000
NODEJS_SERVICE_URL=http://nodejs-backend:3000

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=craft_user
DB_PASSWORD=craft_password
DB_NAME=craft_resource_management
DB_SSL=false

# Test Database Configuration
TEST_DB_HOST=mysql
TEST_DB_PORT=3306
TEST_DB_USERNAME=craft_test_user
TEST_DB_PASSWORD=craft_test_password
TEST_DB_NAME=craft_resource_management_test

# MySQL Root Password
MYSQL_ROOT_PASSWORD=root_password

# Spring Datasource
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/craft_resource_management
SPRING_DATASOURCE_USERNAME=craft_user
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin123

# OpenAI Configuration
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-api-key

# Python Backend Configuration
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
FLASK_ENV=development
SECRET_KEY=your-secret-key
FACE_RECOGNITION_THRESHOLD=0.6
FINGERPRINT_THRESHOLD=0.7
BIOMETRIC_TEMPLATE_ENCRYPTION=true
OPENCV_FACE_CASCADE_PATH=/app/haarcascade_frontalface_default.xml
ML_MODEL_PATH=/app/models
LIGHTWEIGHT_FACE_DETECTOR_PROTOTXT=/app/models/deploy.prototxt
LIGHTWEIGHT_FACE_DETECTOR_MODEL=/app/models/res10_300x300_ssd_iter_140000.caffemodel
LIGHTWEIGHT_FACE_RECOGNITION_MODEL=/app/models/openface_nn4.small2.v1.t7
OPENAI_MODEL=gpt-3.5-turbo
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=false
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100/hour
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Node Environment
NODE_ENV=development
