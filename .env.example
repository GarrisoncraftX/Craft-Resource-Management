# ===================================
# Craft Resource Management System
# Root Environment Configuration
# ===================================

# IMPORTANT: Copy this file to .env and fill in actual values
# NEVER commit .env files to version control

# ===================================
# Database Configuration (Shared)
# ===================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=crm_user
DB_PASSWORD=your_secure_database_password
DB_NAME=craft_resource_management

# ===================================
# JWT Configuration (Shared)
# ===================================
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters

# ===================================
# Service URLs
# ===================================
FRONTEND_URL=http://localhost:5173
API_GATEWAY_URL=http://localhost:5003
JAVA_BACKEND_URL=http://localhost:5002
NODE_BACKEND_URL=http://localhost:5001
PYTHON_BACKEND_URL=http://localhost:5000

# ===================================
# Email Configuration (SMTP)
# ===================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourcompany.com

# ===================================
# SMS Configuration (Twilio)
# ===================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# Cloud Storage (Cloudinary)
# ===================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===================================
# AWS Configuration (Optional)
# ===================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ===================================
# OpenAI Configuration (Optional)
# ===================================
OPENAI_API_KEY=your_openai_api_key

# ===================================
# Application Settings
# ===================================
NODE_ENV=development
FLASK_ENV=development
