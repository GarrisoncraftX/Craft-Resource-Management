        }
      },
      "response": []
    },
    {
      "name": "Get Contracts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/procurement/contracts",
          "host": ["{{base_url}}"],
