{
  "info": {
    "name": "Procurement Bid and Contract API Tests",
    "_postman_id": "new-collection-id",
    "description": "Postman collection to test Procurement Bid and Contract endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Bid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenderId\": \"T_1234567890\",\n  \"vendorId\": \"V_1234567890\",\n  \"bidAmount\": 10000,\n  \"bidDocument\": \"http://example.com/bid.pdf\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/procurement/bids",
          "host": ["{{base_url}}"],
          "path": ["api", "procurement", "bids"]
        }
      },
      "response": []
    },
    {
      "name": "Get Bid by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/procurement/bids/{{bid_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "procurement", "bids", "{{bid_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Bids by Tender",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/procurement/tenders/{{tender_id}}/bids",
          "host": ["{{base_url}}"],
          "path": ["api", "procurement", "tenders", "{{tender_id}}", "bids"]
        }
      },
      "response": []
    },
    {
      "name": "Update Bid Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"approved\",\n  \"comments\": \"Bid approved by committee\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/procurement/bids/{{bid_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["api", "procurement", "bids", "{{bid_id}}", "status"]
        }
      },
      "response": []
    },
