        "url": {
          "raw": "{{base_url}}/api/procurement/contracts/{{contract_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["api", "procurement", "contracts", "{{contract_id}}", "status"]
        }
      },
      "response": []
    }
  ]
}
